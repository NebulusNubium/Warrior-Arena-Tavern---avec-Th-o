{% extends 'base.html.twig' %}
{% block title %}Gestion des personnages{% endblock %}
{% block body %}
<h1>Gestion des personnages</h1>
<table class="table">
    <thead>
        <tr>
            <th>Nom</th>
            <th>HP</th>
            <th>Puissance</th>
            <th>DÃ©fense</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for character in characters %}
        <tr>
            <td>{{ character.name }}</td>
            <td>{{ character.HP }}</td>
            <td>{{ character.power }}</td>
            <td>{{ character.defense }}</td>
            <td>
                <a href="{{ path('admin_characters_edit', {id: character.id}) }}" class="btn btn-primary btn-sm">Modifier</a>
                <form method="post" action="{{ path('admin_characters_delete', {id: character.id}) }}" style="display:inline-block;" onsubmit="return confirm('Supprimer ce personnage ?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete_char_' ~ character.id) }}">
                    <button class="btn btn-danger btn-sm">Supprimer</button>
                </form>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
