{% extends 'base.html.twig' %}

{% block title %}Matchmaking{% endblock %}

{% block body %}
<div class="match-page">
    <h1 class="match-title">Matchmaking</h1>
    <div class="match-container">
        <div class="team-section">
            <h2 class="team-title">Votre équipe</h2>
            <div class="character-list">
                {% for character in my_team %}
                    <div class="character-item">
                        <h3 class="character-name">{{ character.name }}</h3>
                        <div class="character-stat">PV: {{ character.HP }}</div>
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="team-section">
            {% if opponent %}
                <h2 class="team-title">Adversaire : {{ opponent.username }}</h2>
                <div class="character-list">
                    {% for character in opponent_team %}
                        <div class="character-item">
                            <h3 class="character-name">{{ character.name }}</h3>
                            <div class="character-stat">PV: {{ character.HP }}</div>
                        </div>
                    {% endfor %}
                </div>
                <form method="post" action="{{ path('jouer_battle') }}" class="battle-form">
                    <input type="hidden" name="opponentId" value="{{ opponent.id }}">
                    <button type="submit" class="battle-button">Lancer la bataille</button>
                </form>
            {% else %}
                <div class="no-opponent">Aucun adversaire trouvé pour le matchmaking.</div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
