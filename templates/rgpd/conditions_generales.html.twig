{% extends 'base.html.twig' %}

{% block title %}Conditions Générales d'Utilisation - Warrior Arena Tavern{% endblock %}

{% block body %}
<div class="rgpd-page">
    <div class="container">
        
        <!-- En-tête -->
        <header class="rgpd-header">
            <div class="icon-title">
                <i class="fas fa-file-contract main-icon"></i>
                <h1>Conditions Générales d'Utilisation</h1>
            </div>
            <p class="rgpd-description">Consultez les règles d'utilisation de notre plateforme de jeu.</p>
        </header>

        <!-- Contenu principal -->
        <div class="rgpd-wrapper">
            
