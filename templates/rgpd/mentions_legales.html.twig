{% extends 'base.html.twig' %}

{% block title %}Mentions Légales - Warrior Arena Tavern{% endblock %}

{% block body %}
<div class="rgpd-page">
    <div class="container">
        
        <!-- En-tête -->
        <header class="rgpd-header">
            <div class="icon-title">
                <i class="fas fa-balance-scale main-icon"></i>
                <h1>Mentions Légales</h1>
            </div>
            <p class="rgpd-description">Informations légales concernant notre site et notre entreprise.</p>
        </header>

        <!-- Contenu principal -->
        <div class="rgpd-wrapper">
            
            <!-- Sections principales -->
            <div class="rgpd-sections">
                <div class="rgpd-section">
                    <h2 class="section-title">
                        <span class="section-number">1</span>
                        <span>Informations à venir</span>
                    </h2>
                    <div class="section-content">
                        <p>Le contenu des mentions légales sera ajouté prochainement.</p>
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="rgpd-sidebar">
                
                <!-- Informations de contact -->
                <div class="sidebar-card">
                    <h3><i class="fas fa-envelope"></i> Contact</h3>
                    <p>Une question concernant nos mentions légales ?</p>
                    <a href="{{ path('contact') }}" class="contact-btn">Nous contacter</a>
                </div>

                <!-- Informations légales -->
                <div class="sidebar-card">
                    <h3><i class="fas fa-building"></i> Entreprise</h3>
                    <p>Warrior Arena Tavern<br>
                    Société en développement</p>
                </div>

                <!-- Dernière mise à jour -->
                <div class="sidebar-card">
                    <h3><i class="fas fa-clock"></i> Mise à jour</h3>
                    <p class="update-date">26 août 2025</p>
                </div>
            </div>
        </div>

        <!-- Navigation de retour -->
        <div class="back-navigation">
            <a href="{{ path('home') }}" class="back-btn">
                <i class="fas fa-arrow-left"></i>
                <span>Retour à l'accueil</span>
            </a>
        </div>
    </div>
</div>
{% endblock %}
