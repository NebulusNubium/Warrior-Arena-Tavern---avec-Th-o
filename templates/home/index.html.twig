{% extends 'base.html.twig' %}

{% block title %}Warrior Arena Tavern{% endblock %}

{% block body %}
<div class="hero-banner">
    <header>
        <nav class="navbar hero-navbar">
            <div class="logo">
                <a href="{{ path('home') }}"><img src="{{ asset('logo.png') }}" alt="Logo WAT"></a>
            </div>

            <button class="burger" aria-label="Menu">
                <span></span>
                <span></span>
                <span></span>
            </button>

            <ul class="nav-links">
                <li><a href="{{ path('home') }}">Accueil</a></li>
            </ul>
 
            <ul class="auth-nav">
                {% if not is_granted('ROLE_USER') %}
                    <li><a href="{{ path('login') }}">Connexion</a></li>
                {% else %}
                    {% if app.user %}
                        <li class="greeting">Bonjour {{ app.user.username }}!</li>
                    {% endif %}
                    <li><a href="{{ path('profile') }}">Mon profil</a></li>
                    <li><a href="{{ path('logout') }}">Se d√©connecter</a></li>
                {% endif %}
            </ul>
        </nav>
    </header>

    <div class="hero-content">
        <div class="title-container">
            <h1 class="hero-title">
                <span class="warrior">WARRIOR</span>
                <span class="arena">ARENA</span>
                <span class="taverne">TAVERNE</span>
            </h1>
        </div>
    </div>
</div>
{% endblock %}
